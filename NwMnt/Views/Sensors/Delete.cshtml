@model NwMnt.ViewModels.SensorViewModel

@{
    ViewData["Title"] = "Xóa Sensor";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa sensor này?</h3>
<div>
    <h4>Sensor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Threshold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Threshold)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviceName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

