@model NwMnt.ViewModels.DeviceViewModel

@{
    ViewData["Title"] = "Xóa thiết bị";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa thiết bị này?</h3>
<div>
    <h4>Thiết bị</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IpAddress)
            </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model =>  model.Type)
            </dt>
        <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
            </dt>
        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
        </dd>
